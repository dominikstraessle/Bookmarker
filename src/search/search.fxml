<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="450.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="search.SearchController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New"/>
                        <MenuItem mnemonicParsing="false" text="Open…"/>
                        <Menu mnemonicParsing="false" text="Open Recent"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                        <MenuItem mnemonicParsing="false" text="Save"/>
                        <MenuItem mnemonicParsing="false" text="Save As…"/>
                        <MenuItem mnemonicParsing="false" text="Revert"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Preferences…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo"/>
                        <MenuItem mnemonicParsing="false" text="Redo"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Cut"/>
                        <MenuItem mnemonicParsing="false" text="Copy"/>
                        <MenuItem mnemonicParsing="false" text="Paste"/>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Select All"/>
                        <MenuItem mnemonicParsing="false" text="Unselect All"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox spacing="10.0" VBox.vgrow="NEVER">
            <children>
                <JFXTextField fx:id="searchTxtKeyWords" prefColumnCount="25" promptText="Keywords"/>
                <JFXComboBox fx:id="searchComboEnv" promptText="Environment"/>
                <Region HBox.hgrow="ALWAYS"/>
                <JFXButton fx:id="addBtnAdd" onAction="#handleAdd" styleClass="blue_light" text="Add"
                           HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane>
                    <children>
                        <JFXListView fx:id="resultList" prefHeight="404.0" prefWidth="296.0"
                                     AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                     AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
                <VBox spacing="10.0">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <ImageView fx:id="detailImageIcon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../res/images/brand.png"/>
                                    </image>
                                </ImageView>
                                <Label fx:id="detailLblTitle" HBox.hgrow="NEVER" styleClass="bold_text">
                                    <!--TODO: hier weitermachen -> ansicht verschönern...-->
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </Label>
                                <Region HBox.hgrow="ALWAYS"/>
                                <MenuButton fx:id="detailMenuOptions" mnemonicParsing="false" styleClass="blue_light"
                                            text="Options" HBox.hgrow="ALWAYS">
                                    <items>
                                        <MenuItem fx:id="detailMenuDelete" mnemonicParsing="false"
                                                  onAction="#handleDelete" text="Delete"/>
                                        <MenuItem fx:id="detailMenuCitate" mnemonicParsing="false"
                                                  onAction="#handleCitate" text="Citate"/>
                                        <MenuItem fx:id="detailMenuSave" mnemonicParsing="false" onAction="#handleSave"
                                                  text="Save"/>
                                    </items>
                                </MenuButton>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <AnchorPane/>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints prefHeight="30.0" vgrow="ALWAYS"/>
                            </rowConstraints>
                            <children>
                                <Label text="URL"/>
                                <Label text="Added" GridPane.rowIndex="1"/>
                                <Label text="Environment" GridPane.rowIndex="2"/>
                                <Label text="Description" GridPane.rowIndex="4"/>
                                <Label text="Tags" GridPane.rowIndex="3"/>
                                <Label fx:id="detailLblUrl" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                                       GridPane.vgrow="ALWAYS"/>
                                <Label fx:id="detailLblAdded" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                                       GridPane.rowIndex="1" GridPane.vgrow="ALWAYS"/>
                                <Label fx:id="detailLblEnv" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                                       GridPane.rowIndex="2" GridPane.vgrow="ALWAYS"/>
                                <Label fx:id="detailLblTags" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                                       GridPane.rowIndex="3" GridPane.vgrow="ALWAYS"/>
                                <Label fx:id="detailLblDesc" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                                       GridPane.rowIndex="4" GridPane.vgrow="ALWAYS"/>
                            </children>
                        </GridPane>
                        <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                            <children>
                                <JFXButton fx:id="detailBtnOpen" accessibleRole="HYPERLINK" onAction="#handleOpen"
                                           styleClass="blue_light" text="Open in Browser" HBox.hgrow="ALWAYS"/>
                                <JFXButton fx:id="detailBtnCopy" onAction="#handleCopy" styleClass="blue_light"
                                           text="Copy to Clipboard" HBox.hgrow="ALWAYS"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label fx:id="statusTxtSync" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Not synchronized"
                       HBox.hgrow="ALWAYS"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusTxtServer" text="Server"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusTxtModify" maxWidth="-1.0" text="Modified" HBox.hgrow="NEVER"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
